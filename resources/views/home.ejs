<!-- Menu -->
<!-- Pizza section -->

<div style="display: flex;
justify-content: center;
align-items: center;
margin: 0; margin-top: 5px;">
<h1 class="text-3xl md:text-3xl font-bold" style="
text-align: center;"><u>Explore Menu</u></h1></div>


<section class="menu container mx-auto py-4 px-4">
  <h2 class="text-lg font-bold mb-8 mx-auto text-2xl ml-4">Pizzas</h2>
  <div class="overflow-x-auto whitespace-no-wrap flex space-x-12">
    <% pizzas.filter(function(pizza) { return pizza.category === 'Pizza'; })
    .forEach(function(pizza) { %>
    <div class="w-full md:w-64 mb-4 ml-4">
      <!-- Article -->
      <article
        class="overflow-hidden rounded-lg shadow-lg text-center"
        style="margin-bottom: 20px; width: 290px "
      >
        <div class="h-40 relative">
          <img
            alt="Placeholder"
            class="absolute inset-0 w-full h-full object-cover"
            style="width: 100%; height: 100%"
            src="/img/<%= pizza.image %>"
          />
        </div>
        <header class="items-center justify-between leading-tight p-2 md:p-4">
          <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
          <span class="size py-1 px-4 rounded-full uppercase text-xs"
            ><%= pizza.size %></span
          >
        </header>
        <div class="flex items-center justify-around mb-6">
          <span class="font-bold text-lg">₹<%= pizza.price %></span>
          <button
            data-pizza="<%= JSON.stringify(pizza) %>"
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </article>
      <!-- END Article -->
    </div>
    <!-- END Column -->
    <% }) %>
  </div>
</section>

